@model IEnumerable<ShowTracker.Models.Show>

<div class="container mt-5">
    <h2>Shows</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Add New Show</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Genre</td>
                    <td>@item.Rating</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ShowId" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ShowId" class="btn btn-info">Details</a>
                        <form asp-action="Delete" asp-route-id="@item.ShowId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
