@model IEnumerable<ShowTracker.Models.Show>

<a asp-controller="Shows" asp-action="Create" class="btn btn-success mb-3">Add New Show</a>



<div class="container mt-5">
    <h2>Shows List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Genre</td>
                        <td>@item.Rating</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No shows available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
